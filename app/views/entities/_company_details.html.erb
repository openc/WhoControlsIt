<h1><%= @entity.name %></h1>

<div id='company_details' class="standalone">
  <%- if @entity.opencorporates_url -%>
    <h4>Company details (from <%= link_to 'OpenCorporates', @entity.opencorporates_url, :class => 'oc_link' %>)</h4>
    <dl class='attributes'></dl>
  <%- else -%>
    <dl class='attributes'>
      <dt>Company Number:</dt>
      <dd><%= @entity.company_number %></dd>
      <dt>Jurisdiction:</dt>
      <dd><%= @entity.jurisdiction_name %></dd>
    </dl>
  <%- end -%>

</div>

